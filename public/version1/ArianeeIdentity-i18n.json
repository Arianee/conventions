{
    "$id": "https://cert.arianee.org/version1/ArianeeIdentity-18n.json",
    "$schema": "https://cert.arianee.org/version1/ArianeeIdentity-18n.json",
    "title": "Arianee Identity",
    "description": "Describing an Arianee Brand Identity.",
    "type": "object",  
    "properties": {
      "$schema": {
        "title": "$schema",
        "type": "string",
        "default": "https://cert.arianee.org/version1/ArianeeIdentity-18n.json",
        "widget": "hidden"
      },
      "name": {
        "type": "string",
        "title": "Brand Name",
        "description": "Name of the brand"        
      },
      "companyName": {
        "type": "string",
        "title": "Company Name",
        "description": "Name of the company"        
      },      
      "parentCompanyName": {
        "type": "string",
        "title": "Parent Company Name",
        "description": "Name of parent company"
      },
      "description": {
        "type": "string",
        "title": "Description",
        "description": "Brand / Company description in HTML (main language)",
        "widget": {
          "id": "textarea"
        }
      },
      "externalContents": {
        "type": "array",
        "title": "External Contents",
        "description": "List of External Contents such as website / documentation",
        "items": {
          "type": "object",
          "title": "External Contents",
          "properties": {
            "type": {
              "type": "string",
              "title": "Type",
              "widget": {
                "id": "select"
              },              
              "enum": ["website", "main", "contacts", "shop"]
            },            
            "title": {
              "type": "string",
              "title": "Title",
              "widget": {
                "id": "string"
              }
            },
            "url": {
              "type": "string",
              "title": "Url",
              "widget": {
                "id": "string"
              }
            }
          }
        }
      },      
      "descriptioni18n": {
        "type": "array",
        "title": "Description (languages) / external contents",
        "description": "Brand / Company description in HTML (specific language)",

        "items": {
          "type": "object",
          "properties": {
            "language": {
              "type": "string",
              "title": "Language",
              "widget": {
                "id": "select"
              },
              "enum": ["fr-FR","en-US", "zh-TW", "zh-CN"]
            },
            "content": {
              "type": "string",
              "title": "Content",
              "widget": {
                "id": "textarea"
              }
            },
      
            "externalContents": {
              "type": "array",
              "title": "External Contents",
              "description": "List of External Contents such as website / documentation",
              "items": {
                "type": "object",
                "title": "External Contents",
                "properties": {
                  "type": {
                    "type": "string",
                    "title": "Type",
                    "widget": {
                      "id": "select"
                    },
                    "enum": ["website", "main", "contacts", "shop"]
                  },            
                  "title": {
                    "type": "string",
                    "title": "Title",
                    "widget": {
                      "id": "string"
                    }
                  },
                  "url": {
                    "type": "string",
                    "title": "Url",
                    "widget": {
                      "id": "string"
                    }
                  }
                }
              }
            }            
          }
        }
      },         
      "rpcEndpoint": {
        "type": "string",
        "title": "RPC Endpoint",
        "description": "Certificate Management Platform RPC URL"
      },
      "arianeeMembership": {
        "type": "string",
        "title": "Arianee Member",
        "description": "Company is part of Arianee Association",

        "enum": [
          "not_member", "associate_member","group_member","maison_member"
        ]
    
      },


      "address": {
        "type": "object",
        "title": "Address",
        "description": "Company HQ address",

        "properties": {
          "street_address": {
            "type": "string",
            "title": "Street Address"
          },
          "zipcode": {
            "type": "string",
            "title": "Zip Code"
          },
          "city": {
            "type": "string",
            "title": "City"
          },
          "state": {
            "type": "string",
            "title": "State"
          },
          "country": {
            "type": "string",
            "title": "Country"
          }
        },
        "required": [
          "street_address",
          "city",
          "state",
          "country",
          "zipcode"
        ]
      },
      "contacts": {
        "description": "List of company contact",
        "type": "array",
        "title": "Contacts",
        "items": {
          "title": "Contacts",
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string"
            },
            "email": {
              "title": "Email",
              "type": "string"
            },
            "title": {
              "title": "Title",
              "type": "string"
            },
            "type": {
              "title": "Type",
              "type": "string",
              "enum": ["support", "sales", "hq"]
            }            
          }
        }
      },
      "brandLogoHeader": {
        "type": "string",
        "title": "Brand Logo Header",
        "description": "Logo Header (2000x700) transparent (working with a white background) PNG"
      },
      "brandLogoHeaderReversed": {
        "type": "string",
        "title": "Brand Logo Header Reversed",
        "description": "Logo Header (2000x700) transparent (working with a black background) PNG"
      },      
      "brandLogoSquare": {
        "type": "string",
        "title": "Brand Logo Square",
        "description": "Logo Square (1000x1000) no transparency"
      },
      "brandHomePicture": {
        "type": "string",
        "title": "Brand Collection Picture",
        "description": "Brand Collection Picture (3200x1900) ratioed"
      },       
      "brandBackgroundPicture": {
        "type": "string",
        "title": "Brand Background Picture",
        "description": "Brand Cover Square (1900x3200) preferably dark"
      },         
      "certificateBackgroundPicture": {
        "type": "string",
        "title": "Certificate Background Picture",
        "description": "Certificate Background Picture (1900x3200 TBD) preferably dark - with logo on top"
      },               


      "socialmedia": {
        "type": "array",
        "title": "Social Media",
        "description": "List of Social Media",
        "items": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "title": "Type",
              "widget": {
                "id": "select"
              },
              "enum": ["facebook", "instagram", "twitter"]
            },
            "value": {
              "type": "string",
              "title": "Value",
              "widget": {
                "id": "string"
              }
            }
          }
        }
      }
    },
    "required": [
      "$schema"
    ]
  }